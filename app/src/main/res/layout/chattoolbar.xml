<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

<LinearLayout
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:textSize="22sp"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:id="@+id/chatnameid"
        android:text="Group Name"></TextView>
    <TextView
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:textSize="15sp"
        android:layout_below="@+id/chatnameid"
        android:text="last message"
        android:id="@+id/chatsdescid"></TextView>
</LinearLayout>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/profilechatpic"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="7dp"
        android:paddingTop="1dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_launcher_round"></com.mikhaellopez.circularimageview.CircularImageView>
</LinearLayout>
</RelativeLayout>